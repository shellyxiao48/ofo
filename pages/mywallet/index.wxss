/* pages/mywallet/index.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  width: 100%;
  height: 100vh;
}
.moneycontainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;

}
.moneytitle{
  margin-top: 50rpx;
}
.balance{
  margin: 20rpx auto;
  font-weight: bold;
  font-size: 100rpx;
}

.detail{
  padding: 10rpx 25rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  border: 2rpx solid #ccc;
  border-radius: 50rpx;
}

.recharge{
  margin: 40rpx auto;
  width: 90%;
  background-color: #b6db07;
}
.ticketdetail{
  background: #fff;
  
}
 .cells{
  display: flex;
  padding:35rpx 25rpx;

}
 .cells:not(:last-child){
  border-bottom: 1rpx solid #ddd;
}
 .cells .left{
   width: 320rpx;
}
 .cells .right{
  text-align: right;
  flex: 1;
}
.tips{
   color: #b6db07;
}
.ofodetail{
  margin-top: 40rpx;
  padding: 30rpx 25rpx;
  background-color: #fff;
}